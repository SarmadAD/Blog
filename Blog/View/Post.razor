@page "/post"

@inherits PostBase

<div class="post">
    @if (@ViewModel.SelectedPost != null)
    {
        <div class="postCaption">
            <p>@ViewModel.SelectedPost.Name</p>
        </div>
        <div class="authorReadTimeContent">
            <div class="authorReadTime">
                <div class="author">
                    @ViewModel.LoadAuthor()
                </div>
                <div class="readTime">
                    Lese-Zeit: @ViewModel.SelectedPost.Readtime Minuten
                </div>
            </div>
            <div class="content">
                @((MarkupString)ViewModel.SelectedPost.Text)
            </div>
        </div>
    }
    else
    {
        <p>Konnte Beitrag nicht laden...</p>
    }
</div>